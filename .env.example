# =================================================================
# GTM AUTOMATION ENVIRONMENT VARIABLES
# =================================================================
# Copy this file to .env and fill in your actual values

# =================================================================
# N8N Configuration
# =================================================================
N8N_HOST=http://localhost:5678
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your_secure_admin_password
N8N_ENCRYPTION_KEY=your_32_character_encryption_key_here
TIMEZONE=UTC

# =================================================================
# Database Configuration (PostgreSQL)
# =================================================================
POSTGRES_USER=n8n
POSTGRES_PASSWORD=your_secure_postgres_password
POSTGRES_DB=n8n
POSTGRES_NON_ROOT_USER=n8n
POSTGRES_NON_ROOT_PASSWORD=your_secure_n8n_password

# =================================================================
# Reddit API Configuration
# =================================================================
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=GTM-Automation-Bot/1.0
REDDIT_USERNAME=your_reddit_username
REDDIT_PASSWORD=your_reddit_password

# =================================================================
# AI Provider Configuration
# =================================================================
# Choose your AI provider: 'claude', 'openai', 'groq', 'together', 'ollama'
AI_PROVIDER=claude

# Claude API (Anthropic) - Recommended for Pro users
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-3-5-sonnet-20241022
CLAUDE_MAX_TOKENS=4000
CLAUDE_TEMPERATURE=0.7

# OpenAI API (Alternative)
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Groq API (Free tier available)
GROQ_API_KEY=gsk_your_groq_api_key_here
GROQ_MODEL=llama-3.1-70b-versatile
GROQ_MAX_TOKENS=2000
GROQ_TEMPERATURE=0.7

# Together AI (Free tier available)
TOGETHER_API_KEY=your_together_api_key_here
TOGETHER_MODEL=meta-llama/Llama-3-70b-chat-hf
TOGETHER_MAX_TOKENS=2000
TOGETHER_TEMPERATURE=0.7

# Ollama (Free local models)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:70b
OLLAMA_MAX_TOKENS=2000
OLLAMA_TEMPERATURE=0.7

# Hugging Face (Free tier available)
HUGGINGFACE_API_KEY=hf_your_huggingface_api_key_here
HUGGINGFACE_MODEL=meta-llama/Llama-3.1-70B-Instruct
HUGGINGFACE_MAX_TOKENS=2000
HUGGINGFACE_TEMPERATURE=0.7

# =================================================================
# Google Sheets API Configuration
# =================================================================
GOOGLE_SHEETS_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GOOGLE_SHEETS_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----"
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id_here
GOOGLE_SHEETS_SHEET_NAME=GTM_Data

# =================================================================
# Slack Integration Configuration
# =================================================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#gtm-alerts
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_APP_TOKEN=xapp-your-slack-app-token

# =================================================================
# LinkedIn API Configuration (Optional)
# =================================================================
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token

# =================================================================
# Application Settings
# =================================================================
# Monitoring intervals (in minutes)
REDDIT_CHECK_INTERVAL=15
ANALYTICS_REPORT_INTERVAL=1440  # Daily
CLEANUP_INTERVAL=10080          # Weekly

# Rate limiting settings
MAX_REQUESTS_PER_MINUTE=60
MAX_OPENAI_REQUESTS_PER_MINUTE=20

# Data retention settings (in days)
DATA_RETENTION_DAYS=90
LOG_RETENTION_DAYS=30

# =================================================================
# Alert Thresholds
# =================================================================
HIGH_PRIORITY_THRESHOLD=80
MEDIUM_PRIORITY_THRESHOLD=60
ENGAGEMENT_SUCCESS_THRESHOLD=5

# =================================================================
# Security Settings
# =================================================================
# JWT settings for API authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=24h

# Webhook security
WEBHOOK_SECRET=your_webhook_secret_here

# =================================================================
# Development/Testing Settings
# =================================================================
NODE_ENV=production
DEBUG=false
LOG_LEVEL=info

# Test mode settings
TEST_MODE=false
DRY_RUN=false

# =================================================================
# Email Notifications (Optional)
# =================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
ADMIN_EMAIL=admin@yourcompany.com

# =================================================================
# Backup Configuration
# =================================================================
BACKUP_ENABLED=true
BACKUP_INTERVAL=daily
BACKUP_RETENTION_DAYS=30
AWS_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1